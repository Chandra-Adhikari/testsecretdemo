<% if can? :manage, :all %>
<div class="row col-md-8 col-md-offset-2">
	<h2>Secret Codes</h2>
	<div class="table-responsive">
    <%= link_to 'New Secret Code', new_secret_code_path %>

		<table class="table">
			<thead>
				<tr>
					<th>Secret Code</th>
					<th>User Email</th>
				</tr>
			</thead>
			<tbody>
				<% @secret_codes.each do |secret_code| %>
					<tr class= "dark-row">
						<td><%= secret_code.code %></td>
				    <td><%= secret_code.user %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @secret_codes %>
	</div>
</div>
<%else%>
  <div class="row col-md-8 col-md-offset-2">
    <h2>Only admin can generate and manage secret code.</h2>
  </div>
<%end%>
